{
  "name": "Fluid SBI Development Environment",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "sda-dev",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/venv/bin/python",
        "python.analysis.extraPaths": ["/workspace", "/workspace/sda"],
        "jupyter.jupyterServerType": "local",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": { "path": "/bin/bash", "args": [] }
        }
      },
      "extensions": [
        "ms-python.python", "ms-python.vscode-pylance",
        "ms-toolsai.jupyter", "charliermarsh.ruff",
        "ms-python.black-formatter", "ms-python.isort",
        "eamodio.gitlens"
      ]
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {}
  },
  "forwardPorts": [8888, 6006, 8000],
  "remoteUser": "root"
}
