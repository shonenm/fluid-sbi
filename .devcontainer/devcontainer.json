{
  "name": "Fluid SBI Development Environment",
  "dockerComposeFile": "../docker-compose.yml",
  "service": "sda-dev",
  "workspaceFolder": "/workspace",

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/opt/conda/envs/sda/bin/python",
        "python.terminal.activateEnvironment": true,
        "python.analysis.extraPaths": ["/workspace/sda", "/workspace"],
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": { "path": "/bin/bash", "args": ["-c", "conda activate sda && exec bash"] }
        },
        "jupyter.jupyterServerType": "local",
        "jupyter.notebookFileRoot": "${workspaceFolder}",
        "files.watcherExclude": {
          "**/wandb/**": true,
          "**/data/**": true,
          "**/results/**": true,
          "**/.git/**": true
        },
        "python.formatting.provider": "black",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": false,
        "python.linting.flake8Enabled": true,
        "editor.formatOnSave": true
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-python.black-formatter",
        "ms-python.isort",
        "ms-toolsai.jupyter",
        "ms-toolsai.vscode-jupyter-cell-tags",
        "ms-toolsai.vscode-jupyter-slideshow",
        "charliermarsh.ruff",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "eamodio.gitlens",
        "ms-vscode.vscode-json",
        "redhat.vscode-yaml",
        "ms-vscode.cmake-tools",
        "twxs.cmake"
      ]
    }
  },

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },

  // VS Code の転送を使う（ports競合防止）
  "forwardPorts": [8888, 6006, 8000],
  "portsAttributes": {
    "8888": { "label": "Jupyter Lab", "onAutoForward": "notify" },
    "6006": { "label": "TensorBoard", "onAutoForward": "silent" },
    "8000": { "label": "Dev Server", "onAutoForward": "silent" }
  },

  // Dockerfileで済ませているので基本は空に
  "postCreateCommand": "",

  "remoteUser": "root",

  "mounts": [
    "source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind,consistency=cached",
    "source=${localWorkspaceFolder}/results,target=/workspace/results,type=bind,consistency=cached"
  ]
}
